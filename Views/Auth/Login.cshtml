<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form method="post">
    <div class="form-group">
        <label>Username</label>
        <input name="username" class="form-control" style="max-width: 300px;" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control" style="max-width: 300px;" required />
    </div>
    <button type="submit" class="btn btn-success">Login</button>
</form>
